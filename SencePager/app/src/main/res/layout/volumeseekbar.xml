<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.danny.sencepager.volumeseekbar">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="音量设置"
        android:textSize="40dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/defaulttextview"
        android:text=""
        android:layout_marginLeft="23px"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <SeekBar
        android:id="@+id/systemdef"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="100"
       />
    <TextView
        android:id="@+id/selftextview"
        android:layout_marginLeft="23px"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20dp"/>
    <SeekBar
        android:id="@+id/self"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="20"
        android:progressDrawable="@drawable/bg_bar"
        android:thumb="@drawable/thumb_bar"
        />

    

</LinearLayout>
